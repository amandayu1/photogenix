rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /receipts/{receiptId} {
      allow update, delete, create: if false;
      allow read: if resource.data.ownerID == request.auth.uid;
    }
    match /sellers/{userId}/privateInfo/{document=**} {
      allow read: if request.auth.uid == userId;
      allow update, delete, create: if false;
    }
    match /sellers/{userId} {
      allow read: if true;
      allow write: if (
        request.auth != null &&
        request.auth.uid == userId &&
        (
          (resource == null && !('username' in request.resource.data)) ||
          !request.resource.data.diff(resource.data).affectedKeys().hasAny(['username'])
        )
      );
    }
    match /sellers/{userId}/purchases/{purchaseId} {
      allow create, update, delete: if request.auth != null && request.auth.uid == userId;
      allow read: if true;
    }
    match /sellers/{userId}/purchases/{purchaseId}/promoCodes/{promoId} {
      allow create, read: if request.auth.uid == userId;
    }
    match /usernames/{username} {
      allow read, write: if false;
    }
  }
}
